{
	"name": "wpeverest/user-registration-membership",
	"description": "Membership addon for user registration plugin.",
	"homepage": "https://wpuserregistration.com/features/membership/",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-or-later",
  "autoload": {
		"files": [
			"includes/Functions/CoreFunctions.php"
		  ],
		"psr-4": {
		  "WPEverest\\URMembership\\": "includes/"
		}
	  },
	"require": {
    "composer/installers": "~2.0.0",
		"stripe/stripe-php": "^15.8"
	},
	"require-dev": {
    "wp-cli/i18n-command": "2.2.9",
	  "wpeverest/wpeverest-sniffs": "0.1.0"
	},
	"scripts": {
	  "phpcs": [
		"phpcs -s -p"
	  ],
	  "phpcs-pre-commit": [
		"phpcs -s -p -n"
	  ],
	  "phpcbf": [
		"phpcbf -p"
	  ],
	  "makepot-audit": [
		"wp --allow-root i18n make-pot . --exclude=\".github,.wordpress-org,bin,node_modules,vendor\" --headers='{\"Report-Msgid-Bugs-To\":\"help@wpeverest.com\"}' --slug=user-registration-membership"
	  ],
	  "makepot": [
		"@makepot-audit --skip-audit"
	  ]
	},
	"extra": {
	  "scripts-description": {
		"phpcs": "Analyze code against the WordPress coding standard with PHP_CodeSniffer",
		"phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier",
		"makepot-audit": "Generate languages/user-registration-membership.pot file and run audit",
		"makepot": "Generate languages/user-registration-membership.pot file"
	  }
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"composer/installers": true
		},
    "platform": {
      "php": "7.4.3"
    }
	}
}
